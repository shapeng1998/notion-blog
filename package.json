{
  "name": "notion-blog",
  "private": true,
  "description": "A notion based blog template.",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@icon-park/react": "^1.3.5",
    "classnames": "^2.3.1",
    "expiry-map": "^1.1.0",
    "feed": "^4.2.2",
    "next": "12.0.7",
    "next-themes": "^0.0.15",
    "notion-client": "^4.12.0",
    "notion-types": "^4.10.0",
    "notion-utils": "^4.12.0",
    "p-memoize": "^6.0.1",
    "powered-by-vercel": "^1.1.0",
    "prism-themes": "^1.9.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-notion-x": "^4.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/node": "17.0.0",
    "@types/react": "17.0.37",
    "autoprefixer": "^10.4.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
